    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch (Smelt)",
            "cargo": {
                "args": [
                    "run",
                    "--",
                    "--smelt"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "stdio": [
                "null", 
                "inherit", 
                "inherit"
            ],
            "env": {
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch (Cast)",
            "cargo": {
                "args": [
                    "run",
                    "--",
                    "--cast"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "stdio": [
                "null", 
                "inherit", 
                "inherit"
            ],
            "env": {
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch (Forge)",
            "cargo": {
                "args": [
                    "run",
                    "--",
                    "--forge"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "stdio": [
                "null", 
                "inherit", 
                "inherit"
            ],
            "env": {
                "RUST_LOG": "debug"
            }
        },
        {
            "name": "Debug Cast",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "outputCapture": "std",
            "internalConsoleOptions": "neverOpen",
            "args": ["--cast"]
        },
        {
            "name": "Debug Smelt",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "outputCapture": "std",
            "internalConsoleOptions": "neverOpen",
            "args": ["--smelt"]
        },
        {
            "name": "Debug Forge",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "outputCapture": "std",
            "internalConsoleOptions": "neverOpen",
            "args": ["--forge"]
        }
    ]
}
